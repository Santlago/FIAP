@model PlayWithoutPay.Models.User

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to PlayWithoutPay</h1>
    <p>Discover thousands of games free to play!</p>

    @if (Model != null && !string.IsNullOrEmpty(Model.Login))
    {
        <p>Logged</p>
        <p>Welcome, @Model.Login!</p>
        <form asp-controller="Game" asp-action="Index" method="get">
            <button type="submit" class="btn btn-primary">See our games</button>
        </form>
    }
    else
    {
        <form asp-controller="User" asp-action="Login" method="get">
            <button type="submit" class="btn btn-primary">Login</button>
        </form>
    }
</div>
